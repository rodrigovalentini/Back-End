@model IEnumerable<ClassesDAO.PRATO>

@{
    ViewBag.Title = "Index";
}

<h2>Menu do restaurante</h2>

<p>
    @Html.ActionLink("Adicionar novo prato", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RESTAURANTE.NOME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRICAO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VALOR)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IMAGENS)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RESTAURANTE.NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DESCRICAO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VALOR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IMAGENS)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CODIGO }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.CODIGO }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.CODIGO })
        </td>
    </tr>
}

</table>
